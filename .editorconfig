indent_size = 2

# Use tabs for these files in the headers/drivers directory
[{headers/drivers/shared/driverhelper.h,headers/drivers/switch/SwitchDescriptors.h,headers/drivers/xboxog/XboxOriginalDescriptors.h,headers/drivers/xboxog/xid/xid_steelbattalion.h}]
